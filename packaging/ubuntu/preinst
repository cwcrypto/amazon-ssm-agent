#!/bin/bash

echo "Preparing for install"
if [ $(cat /proc/1/comm) = init ]
then
    stop bzero-ssm-agent || true
elif [ $(cat /proc/1/comm) = systemd ]
then
    echo "-> Systemd detected"
    systemctl is-active snapd.service
    if [ $? -eq 0 ]; then
        # snap service is active and user install bzero-ssm-agent via snap
        snap list | grep "bzero-ssm-agent"
        if [ $? -eq 0 ]; then
            echo "-> bzero-ssm-agent is installed in this instance by snap, please use snap to update or uninstall."
            exit 1
        fi
    fi
    systemctl stop bzero-ssm-agent
    systemctl daemon-reload
fi
